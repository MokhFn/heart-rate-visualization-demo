<div class="page-header">

  <ul class="breadcrumb">
    <li class="active">Users</li>
  </ul>

  <h1>Users</h1>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Username</th>
      <th>Gender</th>
      <th>Age</th>
      <th>Created at</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.username, user %></td>
        <td><%= user.gender %></td>
        <td><%= user.age %></td>
        <td><%= l user.created_at, format: :short %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @users, renderer: BootstrapPagination::Rails %>
